[
    {
        "context": "Editor",
        "bindings": {
            "alt-up": "editor::MoveLineUp",
            "alt-down": "editor::MoveLineDown",
            "alt-shift-down": "editor::DuplicateLineDown",
            "alt-shift-up": "editor::DuplicateLineUp",
            "cmd-shift-f": "editor::FindAllReferences",
            "cmd-shift-g": [
                "agent::NewExternalAgentThread",
                { "agent": "codex" },
            ],
            "ctrl-shift-right": "pane::ActivateNextItem",
            "ctrl-shift-left": "pane::ActivatePreviousItem",
        },
    },
    {
        "context": "!Terminal",
        "bindings": {
            "ctrl-alt-`": ["workspace::SendKeystrokes", "ctrl-` shift-escape"],
        },
    },
    {
        "context": "Terminal",
        "bindings": {
            "ctrl-space t": "terminal_panel::ToggleFocus",
            "ctrl-alt-`": [
                "workspace::SendKeystrokes",
                "shift-escape ctrl-space t",
            ],
        },
    },
    {
        "context": "Workspace",
        "bindings": {
            "cmd-t": "terminal_panel::ToggleFocus",
            "cmd-shift-right": "workspace::ActivatePaneRight",
            "cmd-shift-left": "workspace::ActivatePaneLeft",
            "cmd-shift-up": "workspace::ActivatePaneUp",
            "cmd-shift-down": "workspace::ActivatePaneDown",
        },
    },
]
